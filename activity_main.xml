<?xml version="1.0" encoding="utf-8" ?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:id="@+id/linearLayout1"
android:layout_width="fill_parent"
android:layout_height="fill_parent"
    android:background="@android:color/holo_blue_dark"
android:orientation="vertical">
<TextView android:id="@+id/textViewPhoneNo"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Enter phone number"
    android:textColor="@android:color/black"
    android:textAppearance="?android:attr/textAppearanceLarge"
    tools:ignore="HardcodedText" />

<EditText android:id="@+id/editTextPhoneNo"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:phoneNumber="true"
    android:inputType=""
    android:maxLines="1"
    android:textColor="@android:color/holo_blue_bright"
    tools:ignore="Deprecated" />
<TextView android:id="@+id/textViewSMS"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Enter SMS Message"
    android:textColor="@android:color/black"
    android:textAppearance="?android:attr/textAppearanceLarge"
    tools:ignore="HardcodedText" />

<EditText android:id="@+id/editTextSMS"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:inputType="textMultiLine"
    android:lines="5" android:gravity="top" />


<Button android:id="@+id/buttonSend"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:textColor="@android:color/black"
    android:text="Send" />
<Button android:id="@+id/location"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:textColor="@android:color/black"
    android:text="Get Location" />

<Button android:id="@+id/sentlocation"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:textColor="@android:color/black"
    android:text="Send Location" />
<Button android:id="@+id/save"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:text="Set Emergency Numbers"

    android:textColor="@android:color/black"
    />
<Switch android:id="@+id/mySwitch"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentLeft="true"
    android:layout_alignParentTop="true"
    android:layout_marginTop="20dp"
    android:text="Emergency"
    android:background="@android:color/holo_red_dark"

    android:textColor="@android:color/black"
    tools:ignore="HardcodedText,ObsoleteLayoutParam,RtlHardcoded" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="155dp"
        android:text="Stop"
        android:textColor="@android:color/black"
        android:textSize="30dp"
        android:id="@+id/button"
               />
</LinearLayout>